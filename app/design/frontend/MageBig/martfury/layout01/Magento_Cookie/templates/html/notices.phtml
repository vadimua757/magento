    $mbHelper = $this->helper('MageBig\MbFrame\Helper\Data');
    $cookiePosition = $mbHelper->getConfig('mbconfig/footer/cookie_position');
    ?>
    <div role="alertdialog"
         tabindex="-1"
         class="message global cookie <?= $cookiePosition; ?>"
         id="notice-cookie-block"
         style="display: none;">
