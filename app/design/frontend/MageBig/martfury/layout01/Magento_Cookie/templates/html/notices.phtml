                <button id="btn-cookie-allow" class="action allow primary">
                    <span><?= $block->escapeHtml(__('Continue')) ?></span>
                </button>
            </div>
        </div>
    </div>
    <script type="text/x-magento-init">
        {
            "#notice-cookie-block": {
                "cookieNotices": {
                    "cookieAllowButtonSelector": "#btn-cookie-allow",
