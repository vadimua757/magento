        <div class="currency-sym language-<?= $block->escapeHtml($block->getCurrentCurrencyCode()) ?>">
            <span class="title"><span><?= $block->escapeHtml($currentCurrencyCode) ?><?php //echo @$block->escapeHtml($currencies[$currentCurrencyCode]) ?></span><i class="mbi mbi-ios-arrow-down"></i></span>
        </div>
        <div class="currency-list">
            <ul class="dropdown switcher-dropdown">
                <?php foreach ($currencies as $_code => $_name): ?>
                    <?php if ($_code != $currentCurrencyCode): ?>
                        <li class="currency-<?= /* @escapeNotVerified */ $_code ?> switcher-option">
                            <a href="#" data-post='<?= /* @escapeNotVerified */ $block->getSwitchCurrencyPostData($_code); ?>'><?= /* @escapeNotVerified */ $_code ?><?php /* @escapeNotVerified */ //echo $_name ?></a>
                        </li>
                    <?php endif; ?>
                <?php endforeach; ?>
            </ul>
        </div>
    </div>
</div>
<?php endif; ?>